@{
    ViewData["Title"] = "CAR_FeatureList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>

    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>CAR_Feature</h3>
                    <p class="text-subtitle text-muted">Gives Information About Car Features</p>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">CAR_Feature</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Basic Tables start -->
        <section class="section">
            <div class="card">
                <div class="card-header">
                    CAR_Feature
                </div>
                <div class="card-body">
                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                <th>Feature Name</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow dr in Model.Rows)
                            {
                                <tr>
                                    @*<td>@dr["CountryID"]</td>*@
                                    <td>@dr["FeatureName"]</td>
                                    <td>@dr["CreationDate"]</td>
                                    <td>@dr["ModificationDate"]</td>
                                    <td>
                                        <form method="post">
                                            <input type="hidden" name="FeatureID" value="@Convert.ToInt32(dr["FeatureID"].ToString())" />
                                            <button class="btn btn-danger" type="submit" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="Delete"><i class="fa fa-close"></i></button>
                                            <button class="btn btn-success" type="submit" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="Add"><i class="fa fa-edit"></i> </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </section>
        <!-- Basic Tables end -->
    </div>
</div>