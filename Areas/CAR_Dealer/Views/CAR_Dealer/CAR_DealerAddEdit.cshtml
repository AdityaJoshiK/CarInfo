@{
    ViewData["Title"] = "CAR_DealerAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CarInfo.Areas.CAR_Dealer.Models.CAR_DealerModel

<div class="row" style="width:auto">
    <div class="col-md-12">
        <h3>@TempData["DealerInsertMsg"]</h3>
        <form method="post" asp-controller="CAR_Dealer" asp-action="Save">
            @Html.HiddenFor(x=>x.DealerID)
            <div class="form-group">
                <label>Dealer Name</label>
                <input type="text" class="form-control" placeholder="Enter Dealer" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Maker</label>
                <select class="form-control" asp-for="MakeID" asp-items="@(new SelectList(ViewBag.MakeList,"MakeID","MakeName"))">
                    <option value="">Select Maker</option>
                </select>
                <span asp-validation-for="MakeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Address</label>
                <input type="text" class="form-control" placeholder="Enter Address" asp-for="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Country</label>
                <input type="text" class="form-control" placeholder="Enter Country" asp-for="Country" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>State</label>
                <input type="text" class="form-control" placeholder="Enter State" asp-for="State" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>City</label>
                <input type="text" class="form-control" placeholder="Enter City" asp-for="City" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input type="text" class="form-control" placeholder="Enter Phone" asp-for="Phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <hr />
            <input type="submit" class="btn btn-outline-primary" />
            <a asp-area="CAR_Dealer" asp-controller="CAR_Dealer" asp-action="Back">
                <button type="button" class="btn btn-success">Cancel</button>
            </a>

        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}