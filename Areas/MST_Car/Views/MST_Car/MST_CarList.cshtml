@{
    ViewData["Title"] = "MST_CarList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>

    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>MST_Car</h3>
                    <p class="text-subtitle text-muted">Gives Information About Cars</p>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                            <a class="active" asp-controller="Home" asp-action="Index">Dashboard</a>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page">MST_Car</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Basic Tables start -->
        <section class="section">
            <div class="card">
                <div class="card-header">
                    MST_Car
                </div>
                <div class="card-body" style="overflow:scroll">
                    <table class="table table-striped table-bordered table-sm" id="table1" cellspacing="0"
                           width="100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Maker</th>
                                <th>Type</th>
                                <th>Variant</th>
                                <th>Feature</th>
                                <th>FuelType</th>
                                <th>TransmissionType</th>
                                <th>Year</th>
                                <th>Price</th>
                                <th>Image</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow dr in Model.Rows)
                            {
                                <tr>
                                    @*<td>@dr["CountryID"]</td>*@
                                    <td>@dr["Name"]</td>
                                    <td>@dr["MakeName"]</td>
                                    <td>@dr["TypeName"]</td>
                                    <td>@dr["VariantName"]</td>
                                    <td>@dr["FeatureName"]</td>
                                    <td>@dr["FuelTypeName"]</td>
                                    <td>@dr["TransmissionTypeName"]</td>
                                    <td>@dr["Year"]</td>
                                    <td>@dr["Price"]</td>
                                    <td>@dr["Image"]</td>
                                    <td>@dr["CreationDate"]</td>
                                    <td>@dr["ModificationDate"]</td>
                                    <td>
                                        <form method="post">
                                            <input type="hidden" name="CarID" value="@Convert.ToInt32(dr["CarID"].ToString())" />
                                            <button class="btn btn-danger" type="submit" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="Delete"><i class="fa fa-close"></i></button>
                                            <button class="btn btn-success" type="submit" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="Add"><i class="fa fa-edit"></i> </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </section>
        <!-- Basic Tables end -->
    </div>
</div>

