@{
    ViewData["Title"] = "CAR_MakeAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CarInfo.Areas.CAR_Make.Models.CAR_MakeModel

<div class="row" style="width:auto">
    <div class="col-md-12">
        <h3>@TempData["MakeInsertMsg"]</h3>
        <form method="post" asp-controller="CAR_Make" asp-action="Save">
            @Html.HiddenFor(x=>x.MakeID)
            <div class="form-group">
                <label>Make Name</label>
                <input type="text" class="form-control" placeholder="Enter Make Name" asp-for="MakeName" />
                <span asp-validation-for="MakeName" class="text-danger"></span>
            </div>
            <hr />
            <input type="submit" class="btn btn-outline-primary" />
            <a asp-area="CAR_Make" asp-controller="CAR_Make" asp-action="Back">
                <button type="button" class="btn btn-success">Cancel</button>
            </a>

        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}