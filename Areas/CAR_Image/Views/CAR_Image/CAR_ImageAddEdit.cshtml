@{
    ViewData["Title"] = "CAR_ImageAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CarInfo.Areas.CAR_Image.Models.CAR_ImageModel

<div class="row" style="width:auto">
    <div class="col-md-12">
        <h3>@TempData["ImageInsertMsg"]</h3>
        <form method="post" asp-controller="CAR_Image" asp-action="Save" enctype="multipart/form-data">
            @Html.HiddenFor(x => x.ImageID)
            @Html.HiddenFor(x => x.PhotoPath)
            <div class="form-group">
                <label>Car Name</label>
                <select class="form-control" asp-for="CarID" asp-items="@(new SelectList(ViewBag.CarList,"CarID","Name"))">
                    <option value="">Select Car</option>
                </select>
                <span asp-validation-for="CarID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>PhotoPath</label>
                @if (Model==null || Model.ImageID == null || Model.ImageID == 0)
                {
                    <input type="file" class="form-control" multiple placeholder="Upload Files" asp-for="Files" />
                    <span asp-validation-for="Files" class="text-danger"></span>
                }
                else
                {
                    <input type="file" class="form-control" placeholder="Upload File" asp-for="File" />
                    <span asp-validation-for="File" class="text-danger"></span> 
                }
            </div>


            <hr />
            <input type="submit" class="btn btn-outline-primary" />
            <a asp-area="CAR_Image" asp-controller="CAR_Image" asp-action="Back">
                <button type="button" class="btn btn-success">Cancel</button>
            </a>

        </form>
    </div>
</div>
