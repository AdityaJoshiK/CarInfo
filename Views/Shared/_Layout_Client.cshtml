        function toggleDropdown() {
            var dropdownList = document.getElementById("dropdownList");
            var dropdownIcon = document.getElementById("dropdownIcon");
            if (dropdownList.style.display === "none") {
                dropdownList.style.display = "block";
                dropdownIcon.className = "subDropdown minus";
            } else {
                dropdownList.style.display = "none";
                dropdownIcon.className = "subDropdown plus";
            }
        }


        function toggleFuelTypeDropdown() {
            var fuelTypeList = document.getElementById("fuelTypeList");
            var dropdownIcon = document.getElementById("fuelTypeIcon");
            if (fuelTypeList.classList.contains("show")) {
                fuelTypeList.classList.remove("show");
                dropdownIcon.className = "subDropdown plus";
            } else {
                fuelTypeList.classList.add("show");
